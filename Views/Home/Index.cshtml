@{
    ViewBag.Title = "Products";
}
@model  ShoppingCart.Models.ProductEntryModel
<html>
<head runat="server">
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css"  />
</head>
<body>
    <h2>Products</h2>
    <div>
        <table>
            <thead class="row">
            <th class="col-md-3">Name</th>
            <th class="col-md-3">Description</th>
            <th class="col-md-3">Price</th>
            <th class="col-md-3">Click Me!</th>
            </thead>
            @foreach (ShoppingCart.Models.ProductEntryModel serverStatus in ViewBag.products)
            {
                
                <tr class="row">
                    <td class="col-md-3">@serverStatus.Name</td>
                    <td class="col-md-3">@serverStatus.Description</td>
                    <td class="col-md-3">@serverStatus.Price</td>
                    <td class="col-md-3 "><input type="button" value="Purchase" class="btn btn-default btn-success" title="Purchase" onclick="location.href='@Url.Action("Purchase", "Home", new { Name = serverStatus.Name, Desc = serverStatus.Description, price = serverStatus.Price})'"></td>
                </tr>

            }

        </table>

    </div>
</body>
</html>